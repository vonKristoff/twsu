/** OUTPUT PANEL **/

.mood-component
  width calc(50vw - 4em)
  height calc(100vh - 4em)
  +mobile()
    width calc(100vw - 4em)
    height calc(50vh - 4em)

.svg--smile
  width inherit
  height inherit
  ellipse
    transition all .3s
    transform-origin center
    &.has-smile--left
      transform rotate(17deg)
    &.has-smile--right
      transform rotate(-16deg)
    &.has-smirk--left
      transform rotate(-17deg)
    &.has-smirk--right
      transform rotate(-16deg)
    &.has-hmph--left
      transform rotate(-10deg)
    &.has-hmph--right
      transform rotate(10deg)
    &.has-frown--right
      transform rotate(19deg)
/** INPUT PANEL **/
.score-card
  font-size .75em
  color white
  padding .5em 1em
  border-radius 1em
  border .125em solid white
  background-color cornflowerblue

@keyframes pulse 
  from 
    opacity 1
  to 
    opacity 0

.field-container
  position relative
  transition all .3s
  width 100%
  flex 1 3 100%
  display flex
  justify-content center
  align-items center
  label
    transition all .3s
    width .5em
    left 1em
    position absolute
    height 2em
    background-color deeppink
    animation pulse 2s infinite ease-in
  input
    transition: all .3s
    color white
    background-color black
    width 100%
    font-size 1em
    padding 1em 2em
    border-radius .75em
    border .125em solid black
    word-break break-word
    max-width: 100%
    height auto
    &::placeholder
      color khaki
    &:focus
      background-color tomato
      border .125em solid #79025a
  input:focus + label
    display: none
    animation none    

.word-list-component
  flex 1 1 auto  
  width 100%
  display flex
  flex-wrap wrap
  justify-content space-evenly
  align-items center

.badge
  transition: all .3s
  opacity: 0
  font-size: .75em
  margin .25em
  padding .5em 1.25em  
  border-radius .75em
  transition-delay .2s
  &.is-sad
    opacity: 1
    background-color #9c1a34
    color sandybrown
  &.is-happy
    opacity: 1
    background-color #d8ed64
    color crimson

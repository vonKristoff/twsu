@import 'nib'
global-reset()
*, *:before, *:after
  box-sizing border-box

@import 'core/theme'
@import 'core/media'
@import 'core/html'
@import 'core/input'

#root
  width 100vw
  height 100vh
  overflow hidden

.App
  height 100%
  display flex
  flex-direction row
  +mobile()
    flex-direction column-reverse
  .input-panel, .output-panel
    padding 2em  
    flex 1 1 100%
  .input-panel
    display flex
    justify-content center
    align-items center   
    background-color indianred
    max-width 50%
    flex-direction column-reverse
    +mobile()
      max-width 100%
  .output-panel    
    background-color cornflowerblue

@import 'input-panel'
@import 'output-panel'